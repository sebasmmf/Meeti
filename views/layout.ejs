<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeti - <%- nombrePagina %></title>
    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <header class="site-header contenedor">
        <a href="/">
            <img src="/img/logo.png" alt="Logo Meeti">
        </a>

        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="#">Iniciar Sesion</a>
            <a href="/crear-cuenta">Registrarse</a>
        </nav>
    </header>

    <% if(locals.mensajes) { %>
        <% const categoria = Object.keys(locals.mensajes) %>
        <% if(categoria.length) { %>
            <% locals.mensajes[categoria].forEach( alerta => { %>
                <div class="alertas">
                    <p class="alerta <%= categoria %>"><%= alerta %></p>
                </div>
            <% }) %>
        <% } %>
    <% } %>

    <%- body %>

    <footer class="site-footer contenedor">
        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="#">Iniciar Sesion</a>
            <a href="/crear-cuenta">Registrarse</a>
        </nav>

        <p class="copyright">Todos los derechos reservados <%- year %> &copy;</p>
    </footer>
    
</body>
</html>